{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2015",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@sdk": ["./src/sdk"],
      "@sdk/*": ["./src/sdk/*"],
      "$types": ["./src/types"],
      "$types/*": ["./src/types/*"],
      "@helper": ["./src/helper"],
      "@helper/*": ["./src/helper/*"]
    }
  },
  "include": ["src/**/*", "/tests/**/*"]
}
